{
  "name": "linearstories",
  "version": "1.0.0",
  "description": "CLI tool that bridges markdown-based user stories and Linear issues, enforcing acceptance criteria discipline for AI agents",
  "module": "src/cli/index.ts",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stackingturtles/linearstories.git"
  },
  "keywords": [
    "linear",
    "user-stories",
    "acceptance-criteria",
    "ai-agents",
    "cli",
    "markdown",
    "project-management"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "files": [
    "src",
    "templates",
    "LICENSE",
    "README.md"
  ],
  "bin": {
    "linearstories": "src/cli/index.ts"
  },
  "scripts": {
    "dev": "bun run src/cli/index.ts",
    "test": "bun test",
    "lint": "bunx biome check ./src ./tests",
    "format": "bunx biome format --write ./src ./tests",
    "build": "bun build src/cli/index.ts --compile --outfile linearstories"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@linear/sdk": "^75.0.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "glob": "^13.0.4",
    "gray-matter": "^4.0.3"
  }
}
